<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/flights/show.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <a href="/flights/<%= flights._id %>/edit">
    <button>Edit Flight</button>
  </a>
  <% if (flights.ticket.length) { %>
    <%# Congrats! You Purchased Your Ticket %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Seat</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% flights.ticket.forEach(function(ticket) { %>
          
          <tr>
            <td><%= ticket.createdAt.toLocaleDateString() %></td>
            <td><%= ticket.seat %></td> 
            <td>$<%= ticket.price %></td> 
          </tr>
        <% }) %>
      </tbody>
    </table>
  <% } else { %>
    <h3>No Purchases Yet</h3>
  <% } %>
  <section>
    <h2>Tickets</h2>
  <form 
  id="add-ticket-form"
  action="/flights/<%= flights._id %>/tickets"
  method="POST">
  <label for="seat-select">Seat:</label> 
  <input name="seat" id="seat-select" required pattern="[A-F][1-9]\d?">
  <label for="price-select">Price:</label>
  <input name="price" id="price-select">
  
  <button type="submit">Purchase Ticket</button>
</form>
<div>Airline: </div>
<div><%= flights.airline %></div>
<div>Airport: </div>
<div><%= flights.airport %></div>
<div>flightNo: </div>
<div><%= flights.flightNo %></div>
<div>Time/Date of Departure: </div>
<div><%= flights.departs %></div>
<%# start meal list %>
<div>Meals:</div>
<ul>
  <% flights.meal.forEach(mealInfo => { %>
    <li><%= mealInfo.name %></li>
  <% }) %>
</ul>
<%# end meal list %>
</section>

<%# add to meal form below this comment %>
<form id="add-meal-flight" action="/flights/<%= flights._id %>/meal" method="POST">
<select name="mealId">
  <% meals.forEach(meal => { %>
    <option value="<%= meal._id %>"><%= meal.name %></option>
  <% }) %>
</select>
<button type="submit">Add to Meal</button>
</form>

</section>
  </select>
  <%# You have not purchased a ticket yet %>
</main>
<%- include('../partials/footer') %>