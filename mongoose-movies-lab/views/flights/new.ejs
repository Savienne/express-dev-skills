<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/movies/new.css" />
<%- include('../partials/nav') %>

<main>
  <h1><%= title %></h1>
  <form id="new-form" action="/flights" method="POST">
    <label for="title-input">Airline:</label>
    <input type="text" name="title" id="Airline-input">
    <label for="release-year-input">Airport:</label>
    <input type="text" name="releaseYear" id="Airport-input">
    <label for="">Flight#:</label>
    <select name="" id="flight-select">
      <option value="">15</option>
      <option value="">23</option>
      <option value="">33</option>
      <option value="">70</option>
    </select>
    <label for="cast-input">Departure Dates:</label>
    <input type="text" name="cast" id="cast-input">
    <label for="">Boarding Today:</label>
    <input type="checkbox" name="" id="" checked>
    <button type="submit">Add Flight</button>
  </form>
</main>

<%- include("../partials/footer") %>